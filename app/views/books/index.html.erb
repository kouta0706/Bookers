<h1>Books</h1>

<table>
	<tr>
		<th>Title</th>
		<th>Body</th>
		<th colspan="3"></th>
	</tr>
	<% @books.each do |book| %>
 <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td>
   <td><%=link_to "show",book_path(book.id),class: "show_#{book.id}" %></td>
   <td><%=link_to "edit",edit_book_path(book.id),class: "edit_#{book.id}" %></td>
   <td><%=link_to "destroy",book_path(book.id), method: :delete,class: "destroy_#{book.id}" %></td>
 </tr>
<% end %>
</table>
<h1>New book</h1>
<%= form_for(@book) do |f| %>

	<h4>Title</h4>
	<%= f.text_field :title,class: "book_title"%>

	<h4>Body</h4>
	<%= f.text_area :body,class: "book_body" %>
	<%= f.submit "Create Book" %>

<% end %>